class Personagem:
    def __init__(self, nome, vida):
        self.__nome = nome  # Encapsulando o nome do personagem
        self.__vida = vida  # Encapsulando a vida do personagem

    def get_nome(self):
        return self.__nome

    def get_vida(self):
        return self.__vida

    def set_vida(self, nova_vida):
        self.__vida = nova_vida
        
        
#Nesse trecho de código, os atributos __nome e __vida são encapsulados com dois underscores (__) antes do nome da variável. 
#Isso indica que esses atributos são privados e não devem ser acessados diretamente fora da classe.
